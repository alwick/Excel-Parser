<assembly>
    <id>assemble-standalone</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/app</directory>
            <outputDirectory>excel-parser</outputDirectory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>excel-parser</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>./</directory>
            <outputDirectory>excel-parser/logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>